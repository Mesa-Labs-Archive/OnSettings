<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- #App Day/Night Mode Themes# -->
    <style name="mesa_RC_AppStyle.DayNight" parent="@style/mesa_RC_AppStyle.Light" />
    <style name="mesa_AboutActivity_AppStyle.DayNight" parent="@style/mesa_AboutActivity_AppStyle.Light" />

    <!-- #Activity Themes# -->
    <!-- MainActivity -->
    <style name="mesa_RC_AppStyle" parent="@style/mesa_AppStyle.NoActionBar">
        <item name="colorPrimaryDark">@color/sesl_primary_dark_color_dark</item>
        <item name="colorPrimary">@color/sesl_primary_color_dark</item>
        <item name="colorControlActivated">@color/sesl_control_activated_color</item>
        <item name="progressActivatedColor">@color/sesl_progress_control_color_activated_dark</item>
        <item name="progressNormalColor">@color/sesl_progress_control_color_normal_dark</item>
        <item name="preferenceTheme">@style/mesa_RC_PreferenceThemeStyle</item>
        <item name="tabLayoutStyle">@style/mesa_RC_SeslTabLayoutStyle</item>
    </style>
    <style name="mesa_RC_AppStyle.Light" parent="@style/mesa_AppStyle.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/sesl_primary_dark_color_light</item>
        <item name="colorPrimary">@color/sesl_primary_color_light</item>
        <item name="colorControlActivated">@color/sesl_control_activated_color</item>
        <item name="progressActivatedColor">@color/sesl_progress_control_color_activated_light</item>
        <item name="progressNormalColor">@color/sesl_progress_control_color_normal_light</item>
        <item name="preferenceTheme">@style/mesa_RC_PreferenceThemeStyle</item>
        <item name="tabLayoutStyle">@style/mesa_RC_SeslTabLayoutStyle.Light</item>
    </style>

    <!-- AboutActivity -->
    <style name="mesa_AboutActivity_AppStyle.Light" parent="@style/mesa_AppStyle.Light.NoActionBar">
        <item name="android:statusBarColor">@color/mesa_bg_color_baseaboutactivity</item>
        <item name="android:navigationBarColor">@color/mesa_navigation_bar_color_baseaboutactivity</item>
        <item name="android:windowBackground">@color/mesa_bg_color_baseaboutactivity</item>
        <item name="round_and_bgColor">@color/mesa_bg_color_baseaboutactivity</item>
        <item name="roundedCornerColor">@color/mesa_bg_color_baseaboutactivity</item>
    </style>

    <!-- #App Styles# -->
    <!-- SeslPreference -->
    <style name="mesa_RC_PreferenceThemeStyle" parent="@style/mesa_PreferenceThemeStyle">
        <item name="dialogPreferenceStyle">@style/mesa_RC_SeslDialogPreferenceStyle</item>
    </style>

    <style name="mesa_RC_SeslDialogPreferenceStyle" parent="@style/mesa_SeslDialogPreferenceStyle">
        <item name="android:positiveButtonText">@string/mesa_done</item>
        <item name="android:negativeButtonText">@string/mesa_cancel</item>
        <item name="positiveButtonText">@string/mesa_done</item>
        <item name="negativeButtonText">@string/mesa_cancel</item>
    </style>

    <!-- Sesl TabLayout-->
    <style name="mesa_RC_SeslTabLayoutStyle" parent="@style/mesa_SeslTabLayoutStyle">
        <item name="tabIndicatorColor">?colorPrimaryDark</item>
        <item name="tabSelectedTextColor">?colorPrimaryDark</item>
        <item name="tabMode">scrollable</item>
        <item name="tabGravity">center</item>
    </style>
    <style name="mesa_RC_SeslTabLayoutStyle.Light" parent="@style/mesa_RC_SeslTabLayoutStyle">
        <item name="tabTextAppearance">@style/mesa_SeslTabTextStyle.Light</item>
    </style>
</resources>